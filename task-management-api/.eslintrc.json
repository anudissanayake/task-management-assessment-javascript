
{
  "env": {
      "node": true,
      "jest": true, // Enables Jest globals
      "es6": true
  },
  "extends": ["eslint:recommended", "plugin:jest/recommended"],
  "plugins": ["jest"],
  "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
  },
  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-undef": "off" // Prevent false positives for CommonJS
  }
}
  